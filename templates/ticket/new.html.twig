{% extends 'base.html.twig' %}

{% block title %}Create new ticket!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 50px auto 0; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .notification-bar {
        width: 100%;
        position: absolute;
        height: 30px;
        font-size: 20px;
        padding: 5px 5px;
        top: 0;
        left: 0;
    }
    .error {
        background-color: indianred;
        color: maroon;
    }
    .success {
        background-color: lightgreen;
        color: green;
    }
</style>

{% if response %}
    <div class="notification-bar {{ response.type }}">
        {{ response.message }}
    </div>
{% endif %}


<div class="example-wrapper">
    {{ form(form) }}
</div>
{% endblock %}
